val x [a] exclusive a => () : () =
  ()

(* success *)
val () =
  x [(ref int)] ()

(* success *)
val () =
  x [{p: perm} (ref int)] ()

(* success *)
val () =
  x [{p: perm} (ref int | p)] ()

(* failure (BUG) *)
val () =
  x [(r: ref int)] ()

(* failure (BUG) *)
val () =
  x [{r: value} (=r | r @ ref int)] ()

